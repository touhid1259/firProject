<div class="container">
  <div class="jumbotron energy-container">
      <div class="row">
        <div class="col-md-8 table-responsive tab-desk-view">
          <table class="table tb-en">
            <tr>
              <td class="gen-td">
                <img src="<%= image_path 'solarandwinmill.jpg' %>" class="img-circle img-responsive eng-gen">
              </td>
              <td class="edge-one">
                <div class="div-edge">
                  <div class="edge-left"></div>
                  <div class="edge-right"></div>
                </div>
              </td>
              <td class="res-td"><img src="<%= image_path 'residents.png' %>" class="img-circle img-responsive eng-con res"></td>
            </tr>
            <tr class="tr-gap">
              <td>
                <div class="div-edge rotate-edge-90">
                  <div class="edge-left"></div>
                  <div class="edge-right"></div>
                </div>
              </td>
              <td>
                <div class="div-edge rotate-edge">
                  <div class="edge-left"></div>
                  <div class="edge-right"></div>
                </div>
              </td>
              <td></td>
            </tr>
            <tr>
              <td><img src="<%= image_path 'cars.png' %>" class="img-circle img-responsive eng-con car"></td>
              <td></td>
              <td><img src="<%= image_path 'factories.jpg' %>" class="img-circle img-responsive eng-con fact" data-toggle="modal" data-target="#machineries-modal"></td>
            </tr>
          </table>
        </div>

        <div class="col-md-4">
          <div class="col-xs-6"></div>
          <div class="col-md-12 weather"></div>
        </div>
      </div>

      <!-- Modal -->
      <div class="modal fade" id="machineries-modal" role="dialog">
        <div class="modal-dialog">
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 class="modal-title">Machineries</h4>
            </div>
            <div class="modal-body">
              <div class="row">
                <div class="col-md-4"><a href="<%= energy_printer_path %>"><img src="<%= image_path 'printer.png' %>" class="img-responsive" ></a></div>
                <div class="col-md-4"></div>
                <div class="col-md-4"></div>
                <div class="col-md-4"></div>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
</div>
